
@{
    ViewBag.Title = "Productos";
    Layout = "~/Views/Shared/_LayoutDash.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div id="page-wrapper">
        <div id="page-inner">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="page-header">
                        <small>@ViewBag.usuario</small>
                    </h1>
                </div>
            </div>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="col-md-12">
                    <select multiple name="Metod_Pago" id="Metod_Pago" class="comcode form-control" required style="width:150px">
                        @if (ViewBag.Productos.Count > 0)
                        {
                            <option id="" value="" disabled selected>Metodo de Pago</option>
                            foreach (var item in ViewBag.Productos)
                            {
                                <option id="@item.ID" value="@item.ID">@item.Nombre</option>
                            }
                        }
                        else
                        {
                            <option value="" id="no_opt">No hay opciones</option>
                        }
                    </select>
                </div>

                <div class="col-md-12">

                </div>
            </div>
        </div>
    </div>
}
