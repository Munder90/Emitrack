@model Integrador.Entities.USUARIOLOG

@{
    ViewBag.Title = "validateLoginView";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

@using (Html.BeginForm())
{
    <div class="container">
        <div class="card card-login mx-auto mt-5">
            <div class="card-header">Sesión activa</div>
            <div class="card-body">
                @*<div class="card-content">*@

                @*<h4>Login</h4>*@
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <div class="form-label-group">
                        @Html.EditorFor(model => model.USUARIO_ID, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        @Html.LabelFor(model => model.USUARIO_ID, "Usuario", htmlAttributes: new { @class = "control-label", @id = "" })
                    </div>
                    <div class="form-label-group">
                        @Html.EditorFor(model => model.NAVEGADOR, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        @Html.LabelFor(model => model.NAVEGADOR, "Navegador", htmlAttributes: new { @class = "control-label", @id = "" })
                    </div>
                    <div class="form-label-group">
                        @Html.EditorFor(model => model.UBICACION, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        @Html.LabelFor(model => model.UBICACION, "Equipo", htmlAttributes: new { @class = "control-label", @id = "" })
                    </div>
                    <div class="form-label-group">
                        @Html.TextBoxFor(model => model.FECHA, new { @class = "form-control", @readonly = "readonly", @disabled = "disabled" })
                        @Html.LabelFor(model => model.FECHA, "Fecha", htmlAttributes: new { @class = "control-label", @id = "" })
                    </div>
                </div>
                <div>
                    @Html.ValidationSummary(true, "", new { @class = "red-text" })
                </div>
            </div>
            <div class="card-action form-group">
                <p>¿Desea finalizar la sesión activa?</p>
                @*<br />*@
                <div class="text-center form-group">
                    <div class="text-center form-group">
                        <a href="@Url.Action("Login", "Cuentas")" class="btn btn-primary btn-block">Cancelar</a>
                        <input type="submit" value="Continuar" class="btn btn-secondary btn-block" autofocus />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="input-field col s12" style="margin-bottom:0;">
        @Html.EditorFor(model => model.POS, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", style = "display:none;" } })
        @Html.LabelFor(model => model.POS, htmlAttributes: new { @class = "control-label", @id = "", style = "display:none;" })
    </div>

    <div class="input-field col s12" style="margin-bottom:0;">
        @Html.EditorFor(model => model.SESION, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", style = "display:none;" } })
        @Html.LabelFor(model => model.SESION, htmlAttributes: new { @class = "control-label", @id = "", style = "display:none;" })
    </div>
    <input type="hidden" value="@ViewBag.returnUrl" id="returnUrl" name="returnUrl" />
}