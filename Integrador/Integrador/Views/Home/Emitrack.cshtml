
@{
    ViewBag.Title = "Emitrack";
    Layout = "~/Views/Shared/_LayoutDash.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div id="page-wrapper">
        <div id="page-inner">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="page-header">
                        <small>@ViewBag.usuario</small>
                    </h1>
                </div>
            </div>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="container">
                    <div class="card-header">
                        <strong>Mision</strong>
                    </div>
                    <div class="card-body">
                        <p>
                            Satisfacer las necesidades del cliente, en el ámbito de la seguridad, ofreciendo productos de calidad y servicios, brindados por un personal especializado, que nos permitiéndonos garantizar, la confiabilidad y tranquilidad en nuestros clientes.
                        </p>
                    </div>
                </div>
                <div class="container">
                    <div class="card-header">
                        <strong>Visión</strong>
                    </div>
                    <div class="card-body">
                        <p>
                            Seremos la empresa referencia del país en el área de la seguridad, gracias a la calidad de nuestros productos, servicios, y constante implementación de nuevas tecnologías
                        </p>
                    </div>
                </div>
                <div class="container">
                    <div class="card-header">
                        <strong>Valores</strong>
                    </div>
                    <div class="card-body">
                        <p>
                            Ética: ofrecer soluciones verdaderas a nuestros clientes.
                        </p>
                        <p>
                            Compromiso: que nuestros clientes obtengan de nuestra parte una respuesta satisfactoria, en caso de inconvenientes, consultas y solicitudes.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
}