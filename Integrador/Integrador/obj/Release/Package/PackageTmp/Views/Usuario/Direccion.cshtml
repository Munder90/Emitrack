@model IEnumerable<Integrador.Models.Usuarios_Dir>

@{
    ViewBag.Title = "Direccion";
    Layout = "~/Views/Shared/_LayoutDash.cshtml";
}

<div id="page-wrapper">
    <div id="page-inner">
        <div class="row">
            <div class="col-md-12">
                <h1 class="page-header">
                    <small>@ViewBag.usuario</small>
                </h1>
            </div>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-md-12">
                <p align="right" class="col-md-">
                    @*@Html.ActionLink("Datos", "Dashboard", "Usuario", new { id = ViewBag.usuario }, htmlAttributes: new { @class = "btn btn-primary" })*@
                    @Html.ActionLink("Nueva Direccion", "DireccionNueva", "Usuario", new { id = ViewBag.usuario }, htmlAttributes: new { @class = "btn btn-primary" })
                </p>
            </div>
            @if (Model != null)
            {
                <div class="col-md-12">

                    <table class="table table mdl-data-table table-striped">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.CP)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Calle)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Numero_Ext)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Numero_Int)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Colonia)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Municipio)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Estado)
                            </th>
                            <th>

                            </th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CP)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Calle)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Numero_Ext)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Numero_Int)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Colonia)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Municipio)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Estado)
                                </td>
                                <td style="width: 80px;">
                                    <a href="@Url.Action("DireccionEdit", "Usuario", new { id = item.ID })" id="Editar">
                                        <i class="fa fa-fw fa-edit"></i>
                                    </a>
                                    @*<a href="@Url.Action("Detalle", "Producto", new { id = item.ID })" id="Detalle">
                                            <i class="fa fa-fw fa-search"></i>
                                        </a>*@
                                    <a href="" @*href="@Url.Action("Delete", "Producto", new { id = item.ID })"*@ id="Confirma" onclick="pop(@item.ID)">
                                        <i class="fa fa-fw fa-trash-o"></i>
                                    </a>
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            }
            else
            {
                <div class="col-md-4">
                    <div class="form-group">
                        <label>@ViewBag.Error</label>
                    </div>
                </div>
            }
        </div>
        @*<div class="col-md-4">
            <div class="form-group">
                @Html.ActionLink("Datos", "Dashboard", "Usuario", new { id = ViewBag.usuario }, htmlAttributes: new { @class = "btn btn-primary btn-block" })
                @Html.ActionLink("Nueva Direccion", "DireccionNueva", "Usuario", new { id = ViewBag.usuario }, htmlAttributes: new { @class = "btn btn-primary btn-block" })
            </div>*@
    </div>
</div>
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script>
    function pop(id) {

        if (confirm("Eliminar")) {

            $.ajax({
                type: "POST",
                url: '../Usuario/DeleteConfirmedDir',
                dataType: "json",
                data: { "id": id },
                success: function (data) {
                    alert("Eliminado")
                }
            });
        }
        else {
        }
    };
</script>