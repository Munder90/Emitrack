@model Integrador.Models.Pregunta

@{
    ViewBag.Title = "EditQues";
    Layout = "~/Views/Shared/_LayoutDash.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div id="page-wrapper">
        <div id="page-inner">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="page-header">
                        <small>@ViewBag.usuario</small>
                    </h1>
                </div>
            </div>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="col-md-4">
                    @Html.HiddenFor(model => model.Id)
                    <div class="form-group">
                        <div class="form-label-group">
                            @Html.LabelFor(model => model.Apass, "Contraseña", htmlAttributes: new { @class = "control-label col-md-2" })
                            @Html.EditorFor(model => model.Apass, new { htmlAttributes = new { @class = "form-control", @placeholder = "Contraseña", @type="Password" } })
                            @Html.ValidationMessageFor(model => model.Apass, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-label-group">
                            @Html.LabelFor(model => model.Nques, "Nueva Pregunta", htmlAttributes: new { @class = "control-label col-md-2" })
                            @Html.EditorFor(model => model.Nques, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nueva Pregunta"} })
                            @Html.ValidationMessageFor(model => model.Nques, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-label-group">
                            @Html.LabelFor(model => model.Nress, "Nueva Respuesta", htmlAttributes: new { @class = "control-label col-md-2" })
                            @Html.EditorFor(model => model.Nress, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nueva Respuesta" } })
                            @Html.ValidationMessageFor(model => model.Nress, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Salvar" class="btn btn-primary btn-block" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        @Html.ActionLink("Editar Datos", "Edit", "Usuario", new { id = ViewBag.usuario }, htmlAttributes: new { @class = "btn btn-primary btn-block" })
                        @if (ViewBag.Tipo == 2)
                        {
                            @Html.ActionLink("Direcciones de Envío", "Direccion", "Usuario", new { id = ViewBag.usuario }, htmlAttributes: new { @class = "btn btn-primary btn-block" })
                        }
                        @Html.ActionLink("Cambiar Contraseña", "Pass", "Usuario", new { id = ViewBag.usuario }, htmlAttributes: new { @class = "btn btn-primary btn-block" })
                    </div>
                </div>
            </div>
        </div>
    </div>
}


