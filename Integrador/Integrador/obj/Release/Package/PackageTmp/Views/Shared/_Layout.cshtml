<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Emitrack</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar">Inicio</span>
                    <span class="icon-bar">asjd</span>
                    <span class="icon-bar">ñslad</span>
                </button>
                <a href="@Url.Action("Index", "Home")" class="brand-logo">
                    <img src="~/images/logo_kellogg.png" style="padding-top: 8px; padding-left: 8px;" />
                </a>
                @*@Html.ActionLink("LOGO", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="nav-justified">

            </div>
            <div class="navbar-right navbar-collapse collapse">
                @if (ViewBag.Usuario != null)
                {
                    <ul class="nav navbar-nav" style="text-align:right">
                        <li>@Html.ActionLink("Perfil", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</li>
                        <li>@Html.ActionLink("Cerrar", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</li>
                    </ul>
                }
                else
                {
                    <ul class="nav navbar-nav" style="text-align:right">
                        <li>@Html.ActionLink("Login", "Login", "Cuentas", new { area = "" }, new { @class = "navbar-brand" })</li>
                        <li>@Html.ActionLink("Registro", "Registro", "Usuario", new { area = "" }, new { @class = "navbar-brand" })</li>
                    </ul>
                }
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Emitrack</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>