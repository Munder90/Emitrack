@model Integrador.Models.ForgotPasswordViewModel

@{
    ViewBag.Title = "Recuperar";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

@using (Html.BeginForm("Recuperar", "Cuentas", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="container">
        <div class="card card-login mx-auto mt-5">
            <div class="card-header">Recuperar</div>
            <div class="card-body">
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <div class="form-label-group">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-label-group" hidden="hidden">
                            @Html.EditorFor(model => model.User, new { htmlAttributes = new { @class = "form-control", @placeholder = "Usuario" } })
                            @Html.LabelFor(model => model.User, htmlAttributes: new { @class = "control-label" })
                            @Html.ValidationMessageFor(model => model.User, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-label-group">
                            @Html.EditorFor(model => model.Pregunta, new { htmlAttributes = new { @class = "form-control", @placeholder = "Pregunta" } })
                            @Html.LabelFor(model => model.Pregunta, htmlAttributes: new { @class = "control-label" })
                            @Html.ValidationMessageFor(model => model.Pregunta, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-label-group">
                            @Html.EditorFor(model => model.Respuesta, new { htmlAttributes = new { @class = "form-control", @placeholder = "Respuesta" } })
                            @Html.LabelFor(model => model.Respuesta, htmlAttributes: new { @class = "control-label" })
                            @Html.ValidationMessageFor(model => model.Respuesta, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div>
                        @Html.ValidationSummary(true, "", new { @class = "red-text" })
                    </div>
                </div>
                <div class="card-action form-group">
                    <input type="submit" value="Enviar" class="btn btn-primary btn-block" onclick="this.form.submit(); this.disabled=true; this.value='....'" />
                </div>
                <div class="text-center form-group">
                    @Html.ActionLink("Iniciar Sesión", "Login", "Cuentas")<br />
                    @Html.ActionLink("Registro", "Registro", "Usuario")
                </div>
            </div>
        </div>
    </div>
}
